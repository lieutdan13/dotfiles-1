#!/usr/bin/env bash

set -eu
set -o pipefail

### bin
APT="/usr/bin/apt-get"
SUDO="/usr/bin/sudo"

install_bin() {
    # Basic desktop environment
    $APT install -y \
        'i3-wm' \
        'iceweasel' \
        'mplayer' \
        'weechat' \
        'alsamixergui'
}

install_code_tools() {
    # install vim editor, c and python stuff
    $APT install -y \
        'vim-gtk' \
        'xclip' \
        'exuberant-ctags' \
        'build-essential' \
        'tmux' \
        'cmake' \
        'valgrind' \
        'gcc' \
        'gdb' \
        'python-dev' \
        'python-pip' \
        'python-virtualenv' \
        'virtualenvwrapper'
}


check_root() {
    # make sure we have root
    if [ $(id -u) -ne 0 ]; then
        echo "You must be root to run this command"
        exit 1
    fi
}

main() {
    check_root
    $APT update
    $APT upgrade
    install_bin
    install_code_tools
    $APT autoremove
}

main
