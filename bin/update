#!/usr/bin/env bash

set -eu
set -o pipefail

### bin
APT="/usr/bin/apt-get"
SUDO="/usr/bin/sudo"

check_root() {
    # make sure we have root
    if [ $(id -u) -ne 0 ]; then
        echo "You must be root to run this command"
        exit 1
    fi
}

main() {
    check_root
    $APT update
    $APT upgrade
    $APT autoremove
}

main
